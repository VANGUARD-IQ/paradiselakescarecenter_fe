    "scripts": {
        "hh:build": "hardhat compile",
        "hh:compile": "hardhat compile",
        "hh:test": "hardhat test",
        "hh:node": "npx hardhat node",
        "hh:deploy:mainnet": "npx hardhat ignition deploy ./ignition/modules/DeployLifeEssentialsClub.ts --network mainnet --verify",
        "hh:deploy:sepolia": "npx hardhat ignition deploy ./ignition/modules/DeployLifeEssentialsClub.ts --network sepolia --verify",
        "hh:verify:mainnet": "npx hardhat verify --network mainnet DEPLOYED_CONTRACT_ADDRESS",
        "hh:verify:sepolia": "npx hardhat verify --network sepolia DEPLOYED_CONTRACT_ADDRESS",
        "hh:wipe:mainnet": "npx hardhat ignition wipe chain-1 LifeEssentialsClubTokenModule#LifeEssentialsClub"
    },
